# Скопируйте этот файл в .env и заполните реальными значениями

# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# URL базы данных (SQLite)
URL_DB=sqlite+aiosqlite:///./database.db

# Telegram ID создателя (ваш ID)
CREATOR_ID=your_telegram_id

# Telegram ID второго администратора (Катя)
KATYA_ID=katya_telegram_id

# Webhook настройки (только для продакшена с доменом и SSL)
# Замените yourdomain.com на ваш реальный домен
WEBHOOK_HOST=https://yourdomain.com
WEBHOOK_PORT=8080

# Telegram ID владельца бизнеса (кому приходят уведомления)
KATYA_ID=owner_telegram_id

# Дополнительные настройки (опционально)
# DEBUG=False
# LOG_LEVEL=INFO
